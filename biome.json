{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "formatWithErrors": true,
    "attributePosition": "auto",
    "bracketSpacing": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off",
        "useButtonType": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "info",
        "noThenProperty": "off",
        "noExplicitAny": "warn",
        "noAsyncPromiseExecutor": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnreachable": "off",
        "noUnusedImports": "warn",
        "useUniqueElementIds": "off"
      },
      "complexity": {
        "noExtraBooleanCast": "off",
        "noUselessCatch": "off",
        "useOptionalChain": "off",
        "noUselessLoneBlockStatements": "off",
        "noForEach": "off",
        "useLiteralKeys": "off",
        "useArrowFunction": "off",
        "noUselessEmptyExport": "off"
      },
      "style": {
        "noUselessElse": "off",
        "useImportType": "off",
        "noNonNullAssertion": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "es5",
      "bracketSpacing": true,
      "attributePosition": "auto"
    }
  }
}
