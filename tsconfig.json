{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "jsxImportSource": "react", // garante que vem do pacote react
    "incremental": true,
    "baseUrl": ".", // base do projeto
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["src/lib/*"]
    }
  },
  "include": ["src", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
